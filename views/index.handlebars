<div class="container">
  <div class="jumbotron text-center">
    <h2>Find the most expensive drinks in the world!</h2>
  </div>
</div>

<div class="container">
  <div class="panel panel-primary" id="drink-selection-panel">
    <div class="panel-heading">Select your drink to see their location!</div>
    <div class="panel-body">
      {{#each drink}}
        <h3>
          <input type="hidden" value="{{this.name}}">
          <button type="submit" class="btn btn-warning" id="{{this.name}}">{{this.name}}</button>
        </h3>
      {{/each}}
    </div>
  </div>

  <div class="panel panel-primary" id="drink-location-panel">
    <div class="panel-heading">Location</div>
    <div class="panel-body" id="drink-selection-panel">
      {{#each location}}
        <h3>
          <button type="submit" class="btn btn-warning" id="{{this.location}}">{{this.location}}</button>
        </h3>
      {{/each}}
    </div>
  </div>

  </div>
</div>




