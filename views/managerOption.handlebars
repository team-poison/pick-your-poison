<div class="container">
	<br>
	<div class="jumbotron">
		<h1>Manager Option</h1>
		<h2>Fill Out The Form To Add Your Bar/Restaurant To Our Database</h2>
	</div>

	<a href="/">
		<button type="button" class="btn btn-default" aria-label="Left Align" id="home">
  			<span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home
		</button>
	</a>

	<div class="row">
		<div class="col-sm-7">
			<!-- restraurant form -->
			<div class="panel panel-default">
				<h2 class="panel panel-heading" id="rest-head">Submit Your Restaurant</h2>
				<div class="panel panel-body">
					<h3>Restaurant Details</h3>
				</div>
				<form>
					<div class="form-group">
						<label for="name">Name Of Your Restaurant:</label>
						<input type="text" class="form-control" id="rest-name" placeholder="Name">
					</div>
					<div class="form-group">
						<label for="location">Where You Are Located:</label>
						<input type="text" class="form-control" id="rest-loc" placeholder="Location">
					</div>
				</form>

				<!-- second form -->
				<h3>Bourbon Selection</h3>
				<label for="form">Please Fill Out The Form For Each Bourbon You Have Stocked</label>
				<div id="drink-stock-form"></div>
				<br>
				<button type="submit" class="btn btn-default" id="submit-restaurant">Submit</button>
			</div>
		</div>
		
		<div class="col-sm-5">
			<div class="panel panel-default">
				<h2 class="panel panel-heading" id="head">Add A Bourbon</h2>
				<div class="panel panel-body">
					<h3>Bourbon Details</h3>
					<form>
 						<div class="form-group">
				            <label for="name">Name Of The Bourbon:</label>
				            <input type="name" class="form-control" id="drink-name" placeholder="Name">
          				</div>
          				<div class="form-group">
							<label for="location">Years Barrelled:</label>
							<input type="text" class="form-control" id="years" placeholder="Years">
						</div>
						<div class="form-group">
							<label for="location">Barrelled At:</label>
							<input type="text" class="form-control" id="barreled" placeholder="Location">
						</div>
					</form>
					<button type="submit" class="btn btn-default" id="submit-drink">Submit</button> 

				</div>
			</div>	
		</div>	
	</div>
	<footer class="footer"> &#169; Dennis Gruszka, Jason Young, Zoli Saunt, Chang-Yeon Kim </footer>
</div>